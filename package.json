{
  "name": "tapdance",
  "description": "Test harness that emits the Test Anything Protocol (TAP).",
  "version": "3.0.6",
  "license": "MIT",
  "author": {
    "email": "0x8890@airmail.cc",
    "url": "http://0x8890.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/0x8890/tapdance"
  },
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint lib test",
    "build": "npm run build:lib && npm run build:test",
    "build:lib": "mkdirp dist/lib && esdown - lib/index.js dist/lib/index.js",
    "build:test": "mkdirp dist/test && esdown - test/index.js dist/test/index.js",
    "prepublish": "npm run clean && npm run build:lib",
    "test": "npm run lint && npm run build && node dist/test | tap-dot"
  },
  "main": "./dist/lib/index.js",
  "devDependencies": {
    "esdown": "^0.9.11",
    "eslint": "^1.3.1",
    "eslint-config-0x8890": "^1.0.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.4.3",
    "tap-dot": "^1.0.0"
  },
  "eslintConfig": {
    "extends": "0x8890"
  },
  "files": [
    "dist/lib/",
    "lib/",
    "LICENSE"
  ],
  "engines": {
    "node": ">=0.12"
  },
  "keywords": [
    "tap",
    "test",
    "harness"
  ]
}
