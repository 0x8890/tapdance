{
  "name": "tapdance",
  "description": "Test harness that emits the Test Anything Protocol (TAP).",
  "version": "5.0.3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/daliwali/tapdance"
  },
  "main": "tapdance.js",
  "scripts": {
    "build": "npm run extract && npm run compile",
    "extract": "lit-md < tapdance.lisp.md > tapdance.lisp",
    "compile": "./node_modules/sigil-cli/sigil tapdance.lisp > tapdance.js",
    "prepublish": "npm run build && npm test",
    "test": "node test"
  },
  "devDependencies": {
    "lit-md": "0.0.3",
    "sigil-cli": "^1.0.6"
  },
  "engines": {
    "node": ">=4.6.0"
  },
  "keywords": [
    "tap",
    "test",
    "harness"
  ]
}
